<!doctype html>
<html lang="id">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Dashboard â€“ LAJARUS</title>
  <link rel="stylesheet" href="../bootstrap/css/bootstrap.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
  <link href="../assets/css/style.css" rel="stylesheet">
</head>

<body class="with-fixed-nav">

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container">
      <a class="navbar-brand fw-semibold" href="/dashboard">LAJARUS</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navDash">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navDash">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link active" href="/dashboard">Dashboard</a></li>
          <li class="nav-item"><a class="nav-link active" href="/history">Riwayat</a></li>
          <li class="nav-item"><a class="nav-link active" href="#">Profil</a></li>
          <li class="nav-item"><a class="btn btn-sm btn-outline-light ms-lg-3" href="/api/auth/logout">Keluar</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <main class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <div>
        <h4 class="mb-0">Selamat Datang,
          <% if (user) { %>
            <span>
              <%= user.username %>
            </span>
            <% } %>
              <span class="ms-1">ðŸ‘‹</span>
        </h4>
        <small class="text-muted">Pantau dan kelola laporan kerusakan jalan Anda</small>
      </div>
      <a href="dashboard/reports" class="btn btn-rr"><i class="bi bi-plus-lg me-1"></i> Laporan Baru</a>
    </div>

    <div class="row g-3 mb-3">
      <div class="col-lg-4">
        <div class="card card-kpi p-3 h-100">
          <div class="d-flex justify-content-between align-items-start">
            <div>
              <div class="text-muted small">Total Laporan</div>
              <div class="display-6 fw-bold"><%= semuaLaporan.length  %></div>
            </div>
            <div class="kpi-icon" style="background:#ffe09a;"><i class="bi bi-exclamation-triangle"></i></div>
          </div>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="card card-kpi p-3 h-100">
          <div class="d-flex justify-content-between align-items-start">
            <div>
              <div class="text-muted small">Dalam Proses</div>
              <div class="display-6 fw-bold"><%= laporanDiproses.length  %></div>

            </div>
            <div class="kpi-icon" style="background:#d7e3ff;color:#1d4ed8;"><i class="bi bi-hourglass-split"></i></div>
          </div>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="card card-kpi p-3 h-100">
          <div class="d-flex justify-content-between align-items-start">
            <div>
              <div class="text-muted small">Selesai</div>
              <div class="display-6 fw-bold"><%= laporanSelesai.length  %></div>
            </div>
            <div class="kpi-icon" style="background:#e9fff3;color:#16a34a;"><i class="bi bi-check2-circle"></i></div>
          </div>
        </div>
      </div>
    </div>

    <div class="row g-3">
      <div class="col-lg-4">
        <div class="card h-100">
          <div class="card-body">
            <h6 class="card-title">Aksi Cepat</h6>
            <div class="d-grid gap-2">
              <a href="dashboard/reports" class="btn btn-rr"><i class="bi bi-plus-lg me-1"></i> Buat Laporan Baru</a>
              <a href="/history" class="btn btn-outline-secondary"><i class="bi bi-clock-history me-1"></i> Lihat Semua
                Riwayat</a>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-8">
        <div class="card list-report">
          <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <strong>Laporan Terbaru</strong>
            <a href="#" class="small text-muted">Lihat Semua <i class="bi bi-arrow-right"></i></a>
          </div>
          <div class="card-body">
            <!-- render semua laporan nanti itu disini -->
            <table class="table table-hover table-bordered rounded shadow-sm">
              <thead class="table-light text-sm">
                <tr>
                  <th scope="col">Tanggal</th>
                  <th scope="col">Alamat</th>
                  <th scope="col">Status</th>
                  <th scope="col">Aksi</th>
                </tr>
              </thead>
              <tbody class="text-sm">
                <% laporanTerbaru.forEach(laporan=> { %>
                  <tr>
                    <td>
                      <%= new Date(laporan.createdAt).toLocaleDateString('id-ID') %>
                    </td>
                    <td>
                      <%= laporan.alamat_lengkap %>
                    </td>
                    <td>
                      <% if (laporan.status==='terkirim' ) { %>
                        <span class="badge bg-secondary">Terkirim</span>
                        <% } else if (laporan.status==='diproses' ) { %>
                          <span class="badge bg-warning text-dark">Diproses</span>
                          <% } else if (laporan.status==='selesai' ) { %>
                            <span class="badge bg-success">Selesai</span>
                            <% } else { %>
                              <span class="badge bg-light text-dark">
                                <%= laporan.status %>
                              </span>
                              <% } %>
                    </td>
                    <td>
                      <a href="/laporan/<%= laporan.id %>" class="text-primary text-decoration-underline">Detail</a>
                    </td>
                  </tr>
                  <% }) %>
              </tbody>
            </table>


            <div class="text-center">
              <a href="dashboard/reports" class="btn btn-outline-secondary"><i class="bi bi-plus-lg me-1"></i> Tambah
                Laporan Baru</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>